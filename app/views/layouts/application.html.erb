<!DOCTYPE html>
<html>
  <head>
    <title>NearbyThis</title>
    <%= stylesheet_link_tag :all %>
    <%= yield :stylesheets %>  
    <%= javascript_include_tag :defaults, "jquery.pajinate.min" %>
    <%= yield :javascripts %>  
    <%= csrf_meta_tag %>
  </head>
  <body onload="<%= "initialize()" if @location %>" onunload="GUnload();">    
    <div class="container">
      <div class="auth">
        <%= link_to "Home", "/" %> &nbsp; 
        <% if current_user.blank? %>
          <%= link_to "Login", "/users/sign_in" %>
        <% else %>            
          <% if current_user.role == "Promoter" or current_user.role == "Admin" %>
            <%= link_to "Events", "/events" %> &nbsp;  
          <% end %>
          <% if current_user.role == "Admin" %>&nbsp;            
            || <%= link_to "Users", "/users" %> &nbsp;  
          <% end %>
          <% if current_user.role == "User" or current_user.role == "Admin" %>
            <%= link_to "Signup", "/signup" %> &nbsp; 
          <% end %>
          <%= link_to "Logout", destroy_user_session_path, :method => :delete %>
        <% end %>
      </div>
      <div class="span-24" >
        <div id= "header-logo">
          <a href='/'>
            <img src='/images/Nearbythis_Logo.png' />
          </a>
        </div>
        <%= yield :header %>
        <div class='clear'>
          <%= yield %>
        </div>
      </div>
      <script type="text/javascript" charset="utf-8">
  var is_ssl = ("https:" == document.location.protocol);
  var asset_host = is_ssl ? "https://s3.amazonaws.com/getsatisfaction.com/" : "http://s3.amazonaws.com/getsatisfaction.com/";
  document.write(unescape("%3Cscript src='" + asset_host + "javascripts/feedback-v2.js' type='text/javascript'%3E%3C/script%3E"));
</script>

<script type="text/javascript" charset="utf-8">
  var feedback_widget_options = {};
  feedback_widget_options.display = "overlay";  
  feedback_widget_options.company = "nearbythis";
  feedback_widget_options.placement = "left";
  feedback_widget_options.color = "#222";
  feedback_widget_options.style = "idea";
  var feedback_widget = new GSFN.feedback_widget(feedback_widget_options);
</script>
  </body>
</html>
