<!DOCTYPE html>
<html>
  <head>
    <title>NearbyThis</title>
    <%= stylesheet_link_tag 'style' %>
    <%= yield :stylesheets %>  
    <%= javascript_include_tag :defaults, "jquery.pajinate.min", "jquery.cookies.2.2.0.min" %>
    <%= yield :javascripts %>  
    <%= csrf_meta_tag %>
  </head>
  <body onload="<%= "initialize()" if @location %>" onunload="GUnload();">    
    <div class="wrapper">
      <div class="header"><!--header start-->
        <div class="logo"><a href="#"><img src="/images/img/logo.png" alt="" /></a></div>
          <div class="top_nav">
            <ul>
              <li><%= link_to "HOME", root_path %></li>
              <% if !current_user -%>
                <li><%= link_to "LOGIN", new_user_session_path %></li>
              <% else -%>
                <li><%= link_to "LOGOUT", destroy_user_session_path, :method => :delete %></li>
              <% end -%>
            </ul>
          </div>
        <div class="clear"></div>
      </div><!--header end-->

      <%= yield :banner %>
                      
      <div class="content nopadd"><!--content start-->
        <div class="content_left padd"><!--content_left start-->
          <%= yield :content_left %>
        </div><!--content_left end-->
        <div class="sidebar"><!--sidebar start-->
          <%= yield :sidebar %>
        </div><!--sidebar end-->
        <div class="clear"></div>
      </div><!--content end-->
    </div><!--wrapper end-->
  
    <!--feedback start-->
    <script type="text/javascript" charset="utf-8">
      var is_ssl = ("https:" == document.location.protocol);
      var asset_host = is_ssl ? "https://s3.amazonaws.com/getsatisfaction.com/" : "http://s3.amazonaws.com/getsatisfaction.com/";
      document.write(unescape("%3Cscript src='" + asset_host + "javascripts/feedback-v2.js' type='text/javascript'%3E%3C/script%3E"));
    </script>

    <script type="text/javascript" charset="utf-8">
      var feedback_widget_options = {};
      feedback_widget_options.display = "overlay";  
      feedback_widget_options.company = "nearbythis";
      feedback_widget_options.placement = "left";
      feedback_widget_options.color = "#222";
      feedback_widget_options.style = "idea";
      var feedback_widget = new GSFN.feedback_widget(feedback_widget_options);
    </script>
    <!--feedback end-->
    
  </body>
</html>
