<div class='content list'>
  <h2>Your Events</h2>
  <table>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Category</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.address %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.category %></td>
        <td><%= event.description %></td>
        <td class='actions'><%= link_to 'Show', event %> | <%= link_to 'Edit', edit_event_path(event) %> | <%= link_to 'Delete', event, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </table>
  <br />
  <%= link_to 'New Event', new_event_path %>
</div>