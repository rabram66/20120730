<!DOCTYPE html>
<html>
  <head>
    <title>NearbyThis</title>
    <%= stylesheet_link_tag 'style' %>
    <%= yield :stylesheets %>  
    <%= javascript_include_tag :defaults, "jquery.pajinate.min", "jquery.cookies.2.2.0.min" %>
    <%= yield :javascripts %>  
    <%= csrf_meta_tag %>
  </head>
  <body onload="<%= "initialize()" if @location %>" onunload="GUnload();">    
    <div class="wrapper">
      <div class="header"><!--header start-->
        <div class="logo"><a href="#"><img src="/images/img/logo.png" alt="" /></a></div>
          <div class="top_nav">
            <ul>
              <li><%= link_to "HOME", root_path %></li>
              <% if !current_user -%>
                <li><%= link_to "LOGIN", new_user_session_path %></li>
              <% else -%>
                <li><%= link_to "LOGOUT", destroy_user_session_path, :method => :delete %></li>
              <% end -%>
            </ul>
          </div>
        <div class="clear"></div>
      </div><!--header end-->

      <%= yield :banner %>
                      
      <div class="content nopadd"><!--content start-->
        <div class="content_left padd"><!--content_left start-->
          <%= yield :content_left %>
        </div><!--content_left end-->
        <div class="sidebar"><!--sidebar start-->
          <%= yield :sidebar %>
        </div><!--sidebar end-->
        <div class="clear"></div>
      </div><!--content end-->
    </div><!--wrapper end-->
  
    <%= render :partial => '/shared/feedback' %>
    
  </body>
</html>
