<div data-role="header">
  <h1>Events</h1>
</div>
<div data-role='content'>
  <ul id='events-list' data-role="listview" data-theme="b" data-inset='true'>
    <% for event in @events -%>
      <li>
        <a href="<%= mobile_event_path(event) %>">
          <b><%= event.name %></b> - <%= number_with_precision(event.distance_from(@geocode), :precision => 1) %> miles
        </a>
      </li>
    <% end -%>
  </ul>
</div>