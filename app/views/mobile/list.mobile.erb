<div data-role="header" data-id="category-selector" data-position="fixed">
  <h1>Nearby This</h1>
  <div data-role="navbar">
    <ul id='category-selector'>
      <!-- <li><a href="#" class="ui-btn-active ui-state-persist">Eat</a></li> -->
      <li><a href="#">Eat</a></li>
      <li><a href="#">Shop</a></li>
      <li><a href="#">Relax</a></li>
    </ul>
  </div>
</div>
<div data-role='content'>
  <ul id='locations-list' data-role="listview" data-theme="g">
    <% for place in @places -%>
      <li class='<%= category_class_names(place)%>' style='display:none'>
        <%= link_to "<b>#{place.name}</b> - #{number_with_precision(place.distance(@geocode), :precision => 1)} miles".html_safe, mobile_detail_path(place.reference) %>
      </li>
    <% end -%>
  </ul>
</div>