<div data-role='header'>
  <h1><%= @location.name.titleize %></h1>
</div>
<div id='mobile-detail' data-role='content'>
  <%= hidden_field_tag :lat, @location.geo_code.first, :id => :lat %>
  <%= hidden_field_tag :lng, @location.geo_code.last, :id => :lng %>
  <div id='mobile-map'>MAP</div>
  <div id='mobile-full-address'><%= @location.full_address %></div>
  <div id='mobile-twitter-status'>
    <img src='/images/twitter-logo.jpg'/>
    <%= @twitter_status.text if @twitter_status %>
  </div>
  <div id='mobile-facebook-status'><%= @facebook_status.message if @facebook_status %></div>
  <div id='mobile-twitter-mentions'>
    <% if @twitter_mentions && !@twitter_mentions.empty? -%>
      <h3>What People Are Saying</h3>
      <ul>
        <% for tweet in @twitter_mentions -%>
          <li><%= tweet.text %></li>
        <% end -%>
      </ul>
    <% end -%>
  </div>
</div>