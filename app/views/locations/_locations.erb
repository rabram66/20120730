<% unless @locations.blank? %>
  <% @locations.each do |location| %>
    <% if location.reference? %>
      <ul class="<%= location.reference %>">
        <li class="alternate"><%= link_to location.name, :action => 'details', :reference => location.reference %> -  <%= location.address %> <img src="http://www.1nservice.com/uploadedImages/1NService/Home/twitter_logo.jpg" width="12"/>  
          <% unless current_user.blank? %>
          <% if current_user.role.eql? "Admin" or current_user.id.eql?(location.user_id) %>
            <%= link_to 'Edit', edit_location_path(location) %>
            <%= link_to 'Destroy', location, :confirm => 'Are you sure?', :method => :delete %>
            <% end %>
          <% end %>
        </li>
      </ul>
    <% else%>
      <%= '' %>
    <% end %>
  <% end %> 
<% end %>